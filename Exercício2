programa
{
	
	funcao inicio()
	{
		escreva("Me informe as 4 notas bimestrais.")
		
		real nota1
		leia(nota1)

		real nota2
		leia(nota2)

		real nota3
		leia (nota3)

		real nota4
		leia(nota4)

		real mediaBimestral = (nota1 + nota2 + nota3 + nota4)/4

		escreva("A média bimestral é ", mediaBimestral)
	}
}
